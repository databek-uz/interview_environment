{
  // ========================================
  // WORKSPACE-SPECIFIC SETTINGS
  // These override GitHub Settings Sync
  // ========================================

  // Python Configuration - CRITICAL for Spark environment
  "python.defaultInterpreterPath": "/usr/local/bin/python",
  "python.analysis.typeCheckingMode": "basic",
  "python.languageServer": "Pylance",

  // Spark Environment Variables - REQUIRED
  "terminal.integrated.env.linux": {
    "SPARK_HOME": "/opt/spark",
    "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-amd64",
    "PYSPARK_PYTHON": "/usr/local/bin/python"
  },

  // Jupyter Configuration
  "jupyter.askForKernelRestart": false,
  "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],

  // Icon theme for this workspace only
  "workbench.iconTheme": "material-icon-theme",

  // File Watcher Exclusions - Reduce CPU/memory usage
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/spark-warehouse/**": true,
    "**/metastore_db/**": true,
    "**/*.log": true
  },

  // Search Exclusions
  "search.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/spark-warehouse": true,
    "**/metastore_db": true,
    "**/*.pyc": true
  },

  // Disable Copilot for interview environment
  "github.copilot.enable": false,

  // Python Editor Settings
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  }
}
