{
  // ========================================
  // WORKSPACE-SPECIFIC SETTINGS
  // These override GitHub Settings Sync
  // ========================================

  // Python Configuration - CRITICAL for Spark environment
  "python.defaultInterpreterPath": "/usr/local/bin/python",
  "python.analysis.typeCheckingMode": "basic",
  "python.languageServer": "Pylance",

  // Spark Environment Variables - REQUIRED
  "terminal.integrated.env.linux": {
    "SPARK_HOME": "/opt/spark",
    "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-amd64",
    "PYSPARK_PYTHON": "/usr/local/bin/python"
  },

  // Jupyter & Notebook Configuration
  "jupyter.askForKernelRestart": false,
  "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],
  "notebook.defaultFormatter": "ms-python.python",
  "notebook.formatOnSave.enabled": true,
  "notebook.output.textLineLimit": 500,

  // Notebook File Associations - Fix opening issue
  "files.associations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },

  // Icon theme for this workspace only
  "workbench.iconTheme": "material-icon-theme",

  // File Watcher Exclusions - Reduce CPU/memory usage
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/spark-warehouse/**": true,
    "**/metastore_db/**": true,
    "**/*.log": true
  },

  // Search Exclusions
  "search.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/spark-warehouse": true,
    "**/metastore_db": true,
    "**/*.pyc": true
  },

  // ========================================
  // DISABLE ALL AI ASSISTANTS FOR INTERVIEWS
  // ========================================

  // GitHub Copilot
  "github.copilot.enable": false,
  "github.copilot.editor.enableAutoCompletions": false,
  "github.copilot.inlineSuggest.enable": false,
  "github.copilot.chat.enabled": false,

  // ChatGPT / OpenAI
  "chatgpt.enable": false,
  "chatgpt.gpt3.enable": false,
  "openai.enable": false,

  // Google Gemini / Bard
  "gemini.enable": false,
  "bard.enable": false,

  // Amazon CodeWhisperer
  "aws.codeWhisperer.enabled": false,
  "codewhisperer.enabled": false,

  // Tabnine
  "tabnine.disable": true,
  "tabnine.experimentalAutoImports": false,

  // Codeium
  "codeium.enableCodeLens": false,
  "codeium.enableConfig": {
    "*": false
  },

  // IntelliCode
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "editor.suggestSelection": "first",

  // Python Editor Settings
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  }
}
