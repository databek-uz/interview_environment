{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug PySpark",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "SPARK_HOME": "/opt/spark",
        "PYSPARK_PYTHON": "/usr/local/bin/python",
        "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-amd64"
      }
    },
    {
      "name": "Debug Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}
